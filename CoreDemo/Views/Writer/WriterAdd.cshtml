@model CoreDemo.Models.AddProfileImage
@{
    ViewData["Title"] = "WriterAdd";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<form class="form-group" method="post" enctype="multipart/form-data">

    @using (Html.BeginForm("WriterEditProfile", "Writer", FormMethod.Post))
    {@Html.HiddenFor(x => x.WriterID)
    <div class="forms-sample">
        <div class="form-group">
            <label for="exampleInputName1">İsim</label>
            <input class="form-control" asp-for="WriterName" />
        </div>
        <div class="form-group">
            <label for="exampleInputSurame1">Soyad</label>
            <input class="form-control" asp-for="WriterSurname" />
        </div>
        <div class="form-group">
            <label for="exampleInputEmail3">Mail</label>
            <input class="form-control" asp-for="WriterMail" />
        </div>
        <div class="form-group">
            <label for="exampleInputPassword4">Şifre</label>
            <input class="form-control" asp-for="WriterPassword" />
        </div>
        <div class="form-group">
            <label>Yazar Görseli</label>
            <input type="file" name="WriterImage" class="file-upload-default">
            <div class="input-group col-xs-12">
                <input type="text" class="form-control file-upload-info" asp-for="WriterImage" disabled placeholder="Resim Yükle">
                <span class="input-group-append">
                    <button class="file-upload-browse btn btn-gradient-primary" type="button">Resim Seç</button>
                </span>
            </div>
        </div>
        <div class="form-group">
            <label for="exampleTextarea1">Hakkında</label>
            <input class="form-control" asp-for="WriterAbout" />
        </div>
        <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
    </div>
}
</form>

