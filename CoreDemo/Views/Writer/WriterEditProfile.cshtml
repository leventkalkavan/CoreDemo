@model EntityLayer.Concrete.Writer
@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Yazar Profil Düzenleme</h1>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="../wrie/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="../../assets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="../../assets/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="../../assets/images/favicon.ico" />
</head>
<body>
    <div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profili Düzenle</h4>
            @using (Html.BeginForm("WriterEditProfile", "Writer", FormMethod.Post))
            {@Html.HiddenFor(x=>x.WriterID)
                <form class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">İsim</label>
                        <input class="form-control" asp-for="WriterName" />
                    </div>
                    <div class="form-group">
                        <label for="exampleInputSurame1">Soyad</label>
                        <input class="form-control"  asp-for="WriterSurname" />
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Mail</label>
                        <input class="form-control" readonly asp-for="WriterMail" />
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Şifre</label>
                        <input class="form-control"  asp-for="WriterPassword" />
                    </div>
                    <div class="form-group">
                        <label>Yazar Görseli</label>
                        <input type="file" name="WriterImage" class="file-upload-default">
                        <div class="input-group col-xs-12">
                            <input type="text" class="form-control file-upload-info" asp-for="WriterImage" disabled placeholder="Resim Yükle">
                            <span class="input-group-append">
                                <button class="file-upload-browse btn btn-gradient-primary" type="button">Resim Seç</button>
                            </span>
                        </div>
                    </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Hakkında</label>
                    <input class="form-control"  asp-for="WriterAbout" />
                </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
                </form>
            }
        </div>
    </div>
</div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="/writer/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="/writer/assets/js/off-canvas.js"></script>
    <script src="/writer/assets/js/hoverable-collapse.js"></script>
    <script src="/writer/assets/js/misc.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <script src="/writer/assets/js/file-upload.js"></script>
    <!-- End custom js for this page -->
</body>
</html>
