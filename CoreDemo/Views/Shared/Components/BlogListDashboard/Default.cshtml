@using EntityLayer.Concrete
@model List<Blog>
@{string color = "";}
@{string status = "";}
<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son 10 Blog</h4>
                <div class="table-responsive">
                    <table class="table" style="text-align:center;">
                        <thead>
                            <tr>
                                <th> </th>
                                <th> Blog Başlığı </th>
                                <th> Durum </th>
                                <th> Tarih </th>
                                <th> Kategori </th>
                                <th> Detaylar </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                if (item.BlogStatus == true)
                                {
                                    color = "badge badge-success";
                                }
                                else
                                {
                                    color = "badge badge-danger";
                                }
                                switch (item.BlogStatus)
                                {
                                    case true:
                                        status = "Aktif";
                                        break;
                                    case false:
                                        status = "Pasif";
                                        break;
                                }
                                <tr>
                                    <td><img src="@item.BlogThumbnailImage" class="mr-2" alt="image"> </td>
                                    <td>
                                        @item.BlogTitle
                                    </td>
                                    <td>
                                        <label class="@color">@status</label>
                                    </td>
                                    <td>@item.BlogDate.ToShortDateString().ToString() </td>
                                    <td> @item.Category.CategoryName </td>
                                    <td> <a href="/Blog/BlogReadAll/@item.BlogID" class="btn btn-dark">Detaylar</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>