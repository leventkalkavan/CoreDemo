@model IEnumerable<EntityLayer.Concrete.Comment>
<div class="comment-top">
    <h4>Yorumlar</h4>
    @foreach (var item in Model)
    {
        <div class="media">

            <div class="media-body">

                <h5 class="mt-0">@item.CommentUserName</h5>
                <p>
                    @item.CommentContent
                    <br />
                    <a> @item.CommentDate.ToShortDateString()</a>
                </p>
            </div>            
        </div>
    }

</div>         