@model EntityLayer.Concrete.Blog
@{
    ViewData["Title"] = "UpdateBlog";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<br />
<h2>Başlık İçeriği Güncelleme Sayfası</h2>
@using (Html.BeginForm("UpdateBlog", "Blog", FormMethod.Post))
{
<div class="form-group">
    @Html.Label("Blog ID")
    @Html.TextBoxFor(x => x.BlogID, new { @class = "form-control" })
    <br />
    @Html.Label("Blog Başlığı")
    @Html.TextBoxFor(x => x.BlogTitle, new { @class = "form-control" })
    <br />
    @Html.Label("Oluşturma Tarihi")
    @Html.TextBoxFor(x => x.BlogDate, new { @class = "form-control" })
    <br />
    @Html.Label("Blog Görseli")
    @Html.TextBoxFor(x => x.BlogThumbnailImage, new { @class = "form-control" })
    <br />
    @Html.Label("Blog İçeriği")
    @Html.TextBoxFor(x => x.BlogContent, new { @class = "form-control" })
    <br />
    @Html.Label("Blog Kategori ID")
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Kaydet</button>
</div>
}

